{
    "manifest_version": 2,
    "name": "BTCTurk Ticker",
    "description": "Shows BTCTurk exchange prices & transactions dynamically",
    "version": "1.1",
    "author": "Alper Kanat",
    "homepage_url": "https://github.com/tunix/BTCTurk-Ticker",
    "icons": {
        "16": "images/btcturk_logo_16.png",
        "48": "images/btcturk_logo_48.png",
        "128": "images/btcturk_logo_128.png"
    },
    "permissions": [
        "https://www.btcturk.com/",
        "alarms",
        "storage"
    ],
    "browser_action": {
        "default_icon": {
            "19": "images/btcturk_logo_19.png",
            "38": "images/btcturk_logo_38.png"
        },
        "default_popup": "ticker.html",
        "default_title": "BTCTurk Ticker"
    },
    "background": {
        "scripts": [
            "ticker.js",
            "action.js"
        ]
    }
}
